<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/settings_video"
        app:iconSpaceReserved="false">

        <ListPreference
            app:defaultValue="HD"
            app:entries="@array/record_quality_entries"
            app:entryValues="@array/record_quality_values"
            app:key="record_quality"
            app:title="@string/record_quality_title"
            app:useSimpleSummaryProvider="true"
            app:iconSpaceReserved="false"/>

        <SwitchPreferenceCompat
            app:key="record_audio"
            app:title="@string/record_audio"
            app:iconSpaceReserved="false"
            app:defaultValue="true"/>
    </PreferenceCategory>


</PreferenceScreen>